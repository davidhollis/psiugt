<!-- Scaffolding generated by Casein v5.1.1.5 -->


<div class="row">
	<div class="col-lg-10">
		<%= casein_text_field f, f.object, :title %>
	</div>
	<div class="col-lg-2">
		<%= casein_check_box f, f.object, :published, casein_label: 'Published?' %>
	</div>
</div>

<div class="row">
	<div class="col-lg-6">
		<%= casein_collection_select f, f.object, :page, :parent_id, Page.all, :id, :title, include_blank: '(no parent page)' %>
	</div>
	<div class="col-lg-6">
		<%= casein_text_field f, f.object, :slug %>
	</div>
</div>

<div class="row">
	<div class="col-lg-8">
        <%= casein_custom_field f, f.object, :body, summernote_field(f, :body) %>
	</div>
	<div class="col-lg-4">
		<%= casein_custom_field f, f.object, :sidebar, summernote_field(f, :sidebar) %>
	</div>
</div>
