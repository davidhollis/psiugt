<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Status", :status %></th>
			<th>Initiation Class</th>
			<th>Big Brother</th>
			<th><%= casein_sort_link "Member Attributes", :member_attributes %></th>
			<th>Actions</th>
		</tr>
	</thead>
	
	<% members.each do |member| %>
		<tr>
			<td><%= casein_table_cell_link member.name, casein_member_path(member) %></td>
			<td><%= casein_table_cell_link member.status, casein_member_path(member) %></td>
			<td><%= casein_table_cell_link member.initiation_class.name, casein_member_path(member) %></td>
			<td><%= casein_table_cell_link (member.big_brother&.name || '(no big brother)'), casein_member_path(member) %></td>
			<td><%= casein_table_cell_link attribute_badges(member), casein_member_path(member) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_member_path(member), :method => :delete, :data => { :confirm => "Are you sure you want to delete this member?" }) %>
			</td>
		</tr>
	<% end %>
</table>