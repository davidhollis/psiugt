<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th>Title</th>
			<th>Status</th>
            <th>Created</th>
			<th colspan="2">Actions</th>
		</tr>
	</thead>
	
	<% posts.each do |post| %>
		<tr>
			<td><%= casein_table_cell_link post.title, casein_post_path(post) %></td>
			<td><%= casein_table_cell_link publication_status_badge(post), casein_post_path(post) %></td>
			<td><%= casein_table_cell_link post.created_at.strftime('%F %T %z'), casein_post_path(post) %></td>
            <td class="action"><%= link_to(casein_show_row_icon("new-window"), casein_post_path(post)) %></td>
			<td class="delete"><%= link_to(casein_show_row_icon("trash"), casein_post_path(post), :method => :delete, :data => { :confirm => "Are you sure you want to delete this post?" }) %></td>
		</tr>
	<% end %>
</table>