<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th>Position</th>
			<th>Page</th>
			<th colspan="3">Actions</th>
		</tr>
	</thead>
	
	<% menu_items.each do |menu_item| %>
		<tr>
			<td><%= casein_table_cell_link "\##{menu_item.position}", casein_menu_item_path(menu_item) %></td>
			<td><%= casein_table_cell_link menu_item.page.title, casein_menu_item_path(menu_item) %></td>
            <td class="action"><%= link_to(casein_show_row_icon("arrow-up"), move_casein_menu_item_path(menu_item, direction: 'up'), :method => :post) %></td>
            <td class="action"><%= link_to(casein_show_row_icon("arrow-down"), move_casein_menu_item_path(menu_item, direction: 'down'), :method => :post) %></td>
			<td class="delete"><%= link_to(casein_show_row_icon("trash"), casein_menu_item_path(menu_item), :method => :delete, :data => { :confirm => "Are you sure you want to delete this menu item?" }) %></td>
		</tr>
	<% end %>
</table>